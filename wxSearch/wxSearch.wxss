.wxSearch {
  position: absolute;
  top: 100rpx;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(1, 1, 1, 0);
}

.wxSearchInner {
  background-color: #fff;
}

.wxSearch-section {
  background-color: #94070A;
  padding: 5px 10px;
  height: 100rpx;
  align-items: center;
}

.wxSearch-pancel {
  display: flex;
  width: 100%;
  flex-direction: row;
  position: relative;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
}

.wxSearch-input {
  flex: 8;
  width: 700rpx;
  background-color: #eee;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  padding-left: 70rpx;
  border-radius: 25rpx;
}

.wxSearch-button {
  border: none !important;
  color: white !important;
  text-align: center;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}

.wxSearchTitle {
  display: block;
  padding: 20px 5px 20px 5px;
  font-size: 12px;
  text-align: center;
  border-bottom: 1px solid #eee;
}

.wxSearchMindKeyItem {
  padding: 10px 5px;
  border-bottom: 1px solid #eee;
  display: flex;
  font-size: 14px;
  color: cornflowerblue;
}

.wxSearchKeyList {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.wxSearchKeyItem {
  flex: 0 0 20%;
  font-size: 14px;
  text-align: center;
  border: 1px solid #eee;
  margin: 5px;
  padding: 5px 10px;
  border-radius: 5px;
}

.wxSearchHistoryItem {
  padding: 10px 5px;
  border-bottom: 1px solid #eee;
  display: flex;
}

.wxSearchHistoryItemText {
  flex: 8;
  font-size: 14px;
}

.wxSearchHistoryItemDel {
  flex: 1;
  font-size: 12px;
  text-align: center;
  padding: 3px 5px;
  border: 1px solid #eee;
  border-radius: 5px;
}

.wxSearchHistoryEmpty {
  text-align: center;
  height: 50px;
  line-height: 50px;
  font-size: 12px;
}

.wxSearchDeleteAllBtn {
  height: 50px;
  line-height: 50px;
  text-align: center;
  font-size: 12px;
  border-bottom: 1px solid #eee;
}

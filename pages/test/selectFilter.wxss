/* page/two/two.wxss */
.selectContainer{
    font-family: 'PingFang SC', 'Helvetica Neue', Helvetica, 'Droid Sans Fallback', 'Microsoft Yahei', sans-serif;
    height: 100%;
    width: 300rpx;
    background: #fff;
    position: static;
    display: inline-block;
    z-index: 5;
    justify-content: center;
    align-items: center;
    
}
.nav{
    position: static;
    display: flex;
    background: #fff;
    z-index: 5;
    text-align: center;
    justify-content: center;
     align-items:center;
}
.nav-son{
    display: flex;
    text-align: center;
    align-items:center;
    justify-content:center;
    font-size: 25rpx;
}
.content{
    display: inline-block;
}
.icon{
    display: inline-block;
    border: 4px solid transparent;
    border-top: 4px solid #9b9b9b;
    margin-left: 5px;
}
.temp{
    position: absolute;
    z-index:5;
}
.temp2{
    display: none;
    width: 100%;
    max-height: 750rpx;
    overflow-y: scroll;
    padding: 0 0 0 20rpx;
    line-height:100rpx;
    background: #fff;
    box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
    z-index:5;
}

.slidown{
    display: block;
    animation: slidown .3s ease-in both;
}
.nav-son.active .content{
    color: #94070a;
}
.nav-son.active .icon{
    border-bottom: 4px solid #94070a;
    border-top:0;
}
@keyframes slidown{
    from{
        transform:  translateY(-100%);
    }
    to{
        transform:  translateY(0%);
    }
}
@keyframes slidup{
    from{
        transform:  translateY(0%);
    }
    to{
        transform:  translateY(-150%);
    }
}
.slidup{
    display: block;
    animation: slidup .4s ease-in both;
}
.disappear{
    display: none;
}

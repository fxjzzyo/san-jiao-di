/* pages/test/test.wxss */
@import 'selectFilter.wxss';

.page{
  width: 100%;
  height: 100%;
  display: inline-block;
  position: absolute;

}
.topSearchContainer{
position: absolute;
top:0;
display: flex;
justify-content: space-around;
flex-flow: nowrap;
width:100%;
height: 8%;
background: #94070a;
align-items: center;
}
.searchInput{
  position: relative;
  font-size: 25rpx;
  background: white;
  width: 500rpx;
  height: 80%;
  box-sizing: border-box;
  padding-left: 10rpx;
  align-items: center;
  justify-content: center;
  border-radius: 25rpx;
  
}
.searchInput input{
  position: relative;
  left: 70rpx;
  line-height: 1.5;
  margin: 10rpx 0;
  width: 430rpx;
  align-items: center;
} 
.searchIcon{
  position: absolute;
  left: 10rpx;
  width: 50rpx;
  height: 50rpx;
  margin: 10rpx 0;
}
.avatarContainer{
  display: flex;
  flex-direction: column;
  font-size: 20rpx;
justify-content: center;
align-content: center;
  align-items: center;
  margin-bottom: 5rpx;
  padding: 10rpx;
  color: white;
}

.topSearchContainer image{
  width: 50rpx;
  height: 50rpx;
}
.tab-h {
  height: 7%;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  background: #94070a;
  color: white;
  font-size: 20rpx;
  white-space: nowrap;
  position: absolute;
  top: 8%;
  left: 0;
}

.tab-item {
  margin: 0 36rpx;
  display: inline-block;
}

.tab-item.active {
  color: #f5ca6a;
  position: relative;
}

.tab-item.active:after {
  content: "";
  display: block;
  height: 8rpx;
  width: 52rpx;
  background: #f5ca6a;
  position: absolute;
  bottom: 0;
  left: 5rpx;
  border-radius: 16rpx;
}

.item-ans {
  width: 100%;
  display: flex;
  flex-grow: row no-wrap;
  justify-content: space-between;
  padding: 10rpx;
  box-sizing: border-box;
  height: 180rpx;
  align-items: center;
  border-bottom: 1rpx solid #f2f2f2;
  margin-top: 10rpx;
}

.expertInfo {
  font-size: 12rpx;
  flex-grow: 2;
  color: #b0b0b0;
  line-height: 1.5em;
}

.leftInfo .title {
  font-size: 30rpx;
  color: #000;
  margin-bottom: 5rpx;
}
.leftInfo .deadLine {
  font-size: 12rpx;
  color: grey;
  margin-bottom: 2rpx;
}
.hotImage {
  width: 20rpx;
  height: 20rpx;
}

.item-ans image {
  width: 200rpx;
  height: 150rpx;
}

.tab-content {
  width: 100%;
  height: 85%;
  top: 15%;
  display: flex;
  flex-direction: column;
  position: absolute;
}

.scoll-h {
  height: 90%;
}
.swiperItem{
  width: 100%;
  display: flex;
  flex-direction: column;
}
.swiperItem .lunboImage{
  width: 100%;
  height: 100%;
}
.lunbo{
  width: 100%;
  height: 20%;
  padding-left: 10rpx;
  padding-right: 10rpx;
  box-sizing: border-box;
  text-align: center;
  position: relative;
}
.list{
  display: flex;
  flex-flow: wrap;
  justify-content: center;
  box-sizing: border-box;
  align-items: center;
  margin-top: 10rpx;
}
.sv{
  height: 75%;
}
.listItem {
  position: relative;
  width: 350rpx;
  height: 250rpx;
  margin: 5rpx;
}

.leftItem {
  width: 50%;
  height: 100%;
  margin-left: 10rpx;
}

.itemImage{
  width: 100%;
  height: 200rpx;
  justify-content:center;
  position: relative;
}
.itemImage image{
  width: 350rpx;
  height: 200rpx;
}
.innerTopText{
position: absolute;
left: 10rpx;
top: 5rpx;
color: black;
font-size: 20rpx;
}
.innerBottomText{
position: absolute;
left: 10rpx;
bottom: 5rpx;
color: white;
font-size: 20rpx;
}
.rightItem {
  width: 50%;
  height: 100%;
  box-sizing: border-box;
  margin-right: 10rpx;
}


.itemInfo {
  display: flex;
  font-size: 25rpx;
  color: grey;
  margin-top: 5rpx;
  align-items: center;
}

.itemInfo .hotImage {
  width: 20rpx;
  height: 20rpx;
}
.page-loading{
  font-size: 25rpx;
  text-align: center;
  padding: 10rpx;
}
.leftInfo{
width: 480rpx;
}
.rightImage{
width: 240rpx;
}
.topFilterContainer{
  display: flex;
  flex-flow: nowrap;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f2f2f2;
  padding-bottom: 10rpx;
  padding-top: 10rpx;
  font-size: 25rpx;
  height: 5%;
  z-index:5;
  padding-left: 20rpx;
}
.lunbo .hot{
  display: flex;
  position: absolute;
  right: 10rpx;
  bottom: 5rpx;
  color: red;
  font-size: 20rpx;
}
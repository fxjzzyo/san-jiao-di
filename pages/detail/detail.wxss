/* pages/detail/detail.wxss */
.page__detail{
    display: block;
    width: 19rem;
    margin:0 auto;
    background-color: #fff;
    margin-top:0.4rem;
}

.detail__title{
    font-size:36rpx;
    line-height: 50rpx;
    font-weight: 400;
    word-break:break-word;
    width: 100%;
    text-align: left;
}
.article__desc{
    padding-bottom: 30rpx;
    border-bottom: 1rpx solid #ccc;
    margin: 30rpx 0;
    font-size: 25rpx;
}
.article__time{
  color: lightblue;
  margin: 0 30rpx;
}

.article__content{
    font-size: 28rpx;
    color: #333;
    line-height: 42rpx;
    word-break: break-all;
    text-indent: 2em;
    
}


.wxParse-img{
    width: 19rem;
    height: 8rem;
    display:block;
}


<!--pages/login/login.wxml-->
<view class='page'>
  <view class='topContainer'>
    <image src='../../images/san_jiao_di_grey.png'></image>
    <view bindtap='userLogin'>在这里你不会错过北大一切有趣的事</view>
  </view>
  <form bindsubmit='formSubmit'>
  <view class='middleItems'>
    <view class='itemContainer'>

      <view>账号登录</view>
    </view>
    <view class='itemContainer'>
      <image src='../../images/avatar_grey.png'></image>
      <input name='account' type='number' placeholder='学号' value='{{account}}'></input>
    </view>
    <view class='itemContainer'>
      <image src='../../images/password.png'></image>
      <input name='password' type='password' placeholder='密码' value='{{account}}'></input>
    </view>
    <view class='itemContainer'>
      <button class='loginBtn'  size='mini' form-type='submit'>
        登录
      </button>
    </view>
     </view>
  </form>
</view>